---
const processSteps = [
  {
    number: "1",
    title: "Análisis",
    description: "Comprendemos tus necesidades y objetivos"
  },
  {
    number: "2",
    title: "Diseño",
    description: "Desarrollamos una solución personalizada"
  },
  {
    number: "3",
    title: "Implementación",
    description: "Ejecutamos el plan de manera eficiente"
  },
  {
    number: "4",
    title: "Soporte Continuo",
    description: "Mejora continua y asistencia técnica"
  }
];
---

<section class="process">
  <div class="container">
    <div class="section-header text-center">
      <h2>Nuestro Proceso</h2>
      <p>Cómo entregamos soluciones de excelencia</p>
    </div>
    <div class="process-steps">
      {processSteps.map((step) => (
        <div class="step">
          <div class="step-number">{step.number}</div>
          <h3>{step.title}</h3>
          <p>{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>