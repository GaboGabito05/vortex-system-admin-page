---
import IconAnalytics from "../../icons/IconAnalytics.astro";
import IconCRM from "../../icons/IconCRM.astro";
import IconProject from "../../icons/IconProject.astro";

const products = [
  {
    icon: IconAnalytics,
    title: "Internet de Alta Velocidad",
    description: "Conexiones rápidas y confiables para hogares y negocios, con soporte técnico 24/7.",
    features: [
      "Velocidades de hasta 1 Gbps",
      "Baja latencia",
      "Cobertura en áreas urbanas y rurales"
    ],
    buttonText: "Más Información",
    buttonClass: "btn-primary"
  },
  {
    icon: IconCRM,
    title: "Servicios en la Nube",
    description: "Almacenamiento seguro y escalable para tus datos, accesible desde cualquier dispositivo.",
    features: [
      "Almacenamiento ilimitado",
      "Copias de seguridad automáticas",
      "Cifrado de extremo a extremo"
    ],
    buttonText: "Más Información",
    buttonClass: "btn-primary"
  },
  {
    icon: IconProject,
    title: "Soluciones Empresariales",
    description: "Conectividad dedicada y herramientas diseñadas para maximizar la productividad de tu negocio.",
    features: [
      "Telefonía IP y videoconferencias",
      "Redes privadas virtuales (VPN)",
      "Soporte personalizado"
    ],
    buttonText: "Más Información",
    buttonClass: "btn-primary"
  }
];
---

<section class="product-grid">
  <div class="container">
    <div class="products-wrapper">
      {products.map((product) => (
        <div class="product-card">
          <div class="product-icon">
            <product.icon />
          </div>
          <h3>{product.title}</h3>
          <p>{product.description}</p>
          <ul class="feature-list">
            {product.features.map((feature) => (
              <li>{feature}</li>
            ))}
          </ul>
          <button class={`btn ${product.buttonClass}`}>{product.buttonText}</button>
        </div>
      ))}
    </div>
  </div>
</section>