---
const data = [
  {
    number: 120,
    label: 'Expertos en Telecomunicaciones'
  },
  {
    number: 10000,
    label: 'Clientes Satisfechos'
  },
  {
    number: 50,
    label: 'Países con Cobertura'
  },
  {
    number: 15,
    label: 'Años de Innovación Conectando al Mundo'
  }
]
---

<section class="company-stats">
  <div class="container">
    <div class="stats-grid">
      {data.map((stat) => (
        <div class="stat">
          <div class="stat-number">{stat.number.toLocaleString()}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>